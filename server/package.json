{
  "name": "apollo-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:mock-server": "node 'dist/mock-server/index.js'",
    "start:apollo-server": "node 'dist/apollo-server/server.js'",
    "start:mock-server:dev": "nodemon 'apps/mock-server/src/index.ts' --exec 'ts-node' src/index.ts -e ts",
    "start:apollo-server:dev": "nodemon 'apps/apollo-server/src/server.ts' --exec 'ts-node' src/server.ts -e ts,graphql",
    "build:mock-server": "tsc -p apps/mock-server && ncp apps/mock-server/src/images dist/mock-server/images",
    "build:apollo-server": "tsc -p apps/apollo-server && ncp apps/apollo-server/src/schema dist/apollo-server/schema",
    "build:all": "yarn build:apollo-server && yarn build:mock-server",
    "test:apollo-server": "jest --config ./apps/apollo-server/jest.config.js",
    "test:apollo-server:coverage": "yarn test:apollo-server --coverage",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "keywords": [],
  "author": "Mehmet Ozan Turhan",
  "license": "ISC",
  "devDependencies": {
    "@jagi/jest-transform-graphql": "^1.0.2",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4",
    "jest": "^26.6.0",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.18.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "http": "^0.0.1-security",
    "immutable": "^4.0.0-rc.12",
    "jimp": "^0.16.1",
    "ncp": "^2.0.0",
    "node-fetch": "^2.6.1",
    "ts-md5": "^1.2.7"
  }
}
